<section id="news">
    <div class="container">
        <h2>Последни новини</h2>

        @if (Model.Articles != null && Model.Articles.Any())
        {
            @foreach (var article in Model.Articles)
            {
                <article class="news-item">
                    <img src="@article.MainPhoto" alt="@article.Title" class="news-photo">
                    <div class="news-content">
                        <small>@article.PublishDate.ToString("dd MMMM, yyyy")</small>
                        <h3>@article.Title</h3>
                        <p>@article.Summary</p>
                        <a href="article/@article.Id" class="btn-news">Прочети повече</a>
                    </div>
                </article>
            }
        }
        else
        {
            <p>Няма налични новини.</p>
        }



@model PlayerEditViewModel

<form id="editPlayerForm">
    <input type="hidden" asp-for="PlayerId" />
    <input type="hidden" asp-for="Statistics" />
    <input type="hidden" asp-for="PictureURL" />
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" id="playerName" name="Name" required>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Number" class="form-label"></label>
        <input asp-for="Number" class="form-control" id="playerNumber" name="Number" type="number" required>
        <span asp-validation-for="Number" class="text-danger"></span>
    </div>

    <!-- Player Positions -->
    <div class="mb-3">
        <label class="form-label fw-bold">Player Positions</label>
        <div class="border rounded p-3" style="max-height: 200px; overflow-y: auto;">
            @foreach (PlayerPosition value in Enum.GetValues(typeof(PlayerPosition)).Cast<PlayerPosition>())
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="position_@value" name="Positions" value="@value"
                    @(Model.Positions.Contains(value) ? "checked" : "")>
                    <label class="form-check-label" for="position_@value">@value</label>
                </div>
            }
        </div>
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" id="isStartingFive" asp-for="IsStartingFive">
        <label class="form-check-label fw-bold" for="isStartingFive">
            Is Starting Five
        </label>
    </div>
    
    <div class="mb-3">
        <label asp-for="BornYear" class="form-label"></label>
        <input asp-for="BornYear" class="form-control" id="bornYear" name="BornYear" required>
        <span asp-validation-for="BornYear" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Weight" class="form-label"></label>
        <input asp-for="Weight" class="form-control" id="weight" name="Weight" type="number" required>
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Height" class="form-label"></label>
        <input asp-for="Height" class="form-control" id="height" name="Height" type="number" required>
        <span asp-validation-for="Height" class="text-danger"></span>
    </div>
    <!-- Add other fields as needed -->
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="submitPlayerForm">Save Changes</button>
    </div>
</form>
@model PlayerListViewModel

<table class="table table-striped">
    <thead>
        <tr>
            <th>Number</th>
            <th>Name</th>
            <th>Positions</th>
            <th>Age</th>
            <th>Weight (kg)</th>
            <th>Height (cm)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var player in Model.PlayersList)
        {
            <tr>
                <td>@player.Number</td>
                <td>@player.Name</td>
                <td>@string.Join("/", player.Positions)</td>
                <td>@player.Age</td>
                <td>@player.Weight</td>
                <td>@player.Height</td>
                <td>
                    <button class="btn btn-info btn-sm details-player" data-player-id="@player.PlayerId">Details</button>
                    <a class="btn btn-primary btn-sm edit-player" id="editPlayerButton" data-player-id="@player.PlayerId">Edit</a>
                    <a class="btn btn-danger btn-sm delete-player" data-player-id="@player.PlayerId">Delete</a>
                    <a class="btn btn-secondary btn-sm upload-pdf-button" data-player-id="@player.PlayerId" data-player-name="@player.Name">Upload PDF</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Etrosbasket</title>
    <link rel="stylesheet" href="~/admin/lib/bootstrap/dist/css/bootstrap.min.css" />
    @*  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="~/Etrosbasket.styles.css" asp-append-version="true" />
   

</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block bg-dark text-white min-vh-100 p-3">
                <h4 class="text-center">Admin Panel</h4>
                <hr>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a asp-area="Admin" asp-controller="Player" asp-action="Index" class="nav-link text-light">Players</a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link text-light">News</a>
                    </li>

                </ul>
            </nav>

            <!-- Main Content -->
            <main role="main" class="col-md-9 col-lg-10 ms-sm-auto px-4 py-3" id="mainContent">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/admin/js/adminPanel.js" asp-append-version="true"></script>

</body>
</html>
